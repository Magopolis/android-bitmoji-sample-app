<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp">
        <TextView
                android:id="@+id/chat_bubble"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/chat_padding_vertical"
                android:paddingRight="@dimen/chat_padding_horizontal"
                android:paddingBottom="@dimen/chat_padding_vertical"
                android:paddingLeft="@dimen/chat_padding_horizontal"
                android:background="@drawable/chat_received"
                android:textColor="@color/darkText"/>
        <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
</LinearLayout>